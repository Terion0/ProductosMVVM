<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">




    <Color x:Key="Blando">#F5F5F5</Color>
    <Color x:Key="Duro">#2196F3</Color>
    <Color x:Key="ColorPulsadoM">#64B5F6</Color>
    
    <Color x:Key="BackgroundColor">#FFFFFF</Color>
    <Color x:Key="ForegroundColor">#1E1E1E</Color>

    <Color x:Key="VerdeAnadir">#4CAF50</Color>
    <Color x:Key="AmarilloEditar">#FFC107</Color>
    <Color x:Key="RojoBorrar">#F44336</Color>
    
    <SolidColorBrush x:Key="Blandob" Color="{StaticResource Blando}" />
    <SolidColorBrush x:Key="BordePulsado" Color="{StaticResource Duro}" />
    <SolidColorBrush x:Key="Sin pulsar" Color="{StaticResource ColorPulsadoM}" />
 
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}" />
    
    <SolidColorBrush x:Key="Verde" Color="{StaticResource VerdeAnadir}" />
    <SolidColorBrush x:Key="Amarillo" Color="{StaticResource AmarilloEditar}" />
    <SolidColorBrush x:Key="Rojo" Color="{StaticResource RojoBorrar}" />
</ResourceDictionary>