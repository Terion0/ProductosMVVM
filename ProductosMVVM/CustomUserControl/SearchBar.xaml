<UserControl x:Class="ProductosMVVM.CustomUserControl.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProductosMVVM.CustomUserControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="850"
             x:Name="root">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBox HorizontalAlignment="Left" VerticalAlignment="Center"
                     Width="400" Height="20"  Margin="10,0,5,0"/>
            <Image 
             Source="{Binding Image, ElementName=root}"
             Grid.Column="1" 
             Width="20" Height="20" HorizontalAlignment="Left" Margin="10" 
           />
        </StackPanel>
    </Grid>
</UserControl>
